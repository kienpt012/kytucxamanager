@{
    Layout = null;
}

<div id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalTitle" class="modal fade bd-example-modal-lg" aria-modal="true">
    <div role="document" class="modal-dialog modal-lg">
        <form id="form-submit" action="#">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 id="titleModal" class="modal-title white">Thêm mới thẻ sinh viên</h5>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="first-name-icon"> Tên sinh viên </label>
                                <div class="position-relative">
                                    <select id="UserId" name="UserId" class="form-select select"></select>
                                </div>
                                <!---->
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="first-name-icon"> Mã Thẻ </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="Mã Thẻ" id="MaThe" name="MaThe" class="form-control custom-format">
                                </div>
                                <!---->
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon"> Ngày Tạo Thẻ </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="NgayTaoThe" name="NgayTaoThe" class="form-control custom-format formatdate" autocomplete="off" style="padding-left: 33px !important;">
                                    <div class="form-control-icon custom-icon"><i class="fa-solid fa-calendar-days"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon">Ngày Hết Hạn </label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="NgayHetHan" name="NgayHetHan" class="form-control custom-format formatdate" autocomplete="off" style="padding-left: 33px !important;
">
                                    <div class="form-control-icon custom-icon"><i class="fa-solid fa-calendar-days"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="mobile-id-icon">Trạng thái </label>
                                <div class="position-relative">
                                    <select id="Status" name="Status" class="form-select select">
                                        <option value="">Chọn trạng thái</option>
                                        <option value="1">Đang hoạt động</option>
                                        <option value="2">Đã hủy thẻ</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group has-icon-left">
                                <label for="password-id-icon">Ghi chú</label>
                                <div class="position-relative">
                                    <input type="text" placeholder="" id="Comment" name="Comment" class="form-control custom-format">
                                </div>
                                <!---->
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer"><button type="submit" class="btn btn-primary me-1 mb-1 btn-submit-format">Thêm mới</button></div>
                </div>
            </div>
        </form>
    </div>
</div>